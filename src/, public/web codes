// -------------------------------------------------
// Portfolio (user-replaceable images from public/portfolio)
// -------------------------------------------------
function Portfolio() {
  const photos = [
    "/portfolio/headshot1.jpg",
    "/portfolio/headshot2.jpg",
    "/portfolio/portrait1.jpg",
    "/portfolio/portrait2.jpg",
    "/portfolio/lifestyle1.jpg",
    "/portfolio/lifestyle2.jpg",
  ];

  return (
    <PageWrapper title="Portfolio">
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.6 }}
        className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6"
      >
        {photos.map((photo, index) => (
          <motion.div
            key={index}
            whileHover={{ scale: 1.05 }}
            className="overflow-hidden rounded-xl shadow-lg border border-gray-800"
          >
            <img src={photo} alt={`Portfolio ${index + 1}`} className="object-cover w-full h-64" />
          </motion.div>
        ))}
      </motion.div>
      <p className="text-gray-400 mt-6 text-sm">
        Add your personal photos to the <code>public/portfolio</code> folder to display them here.
      </p>
    </PageWrapper>
  );
}

// -------------------------------------------------
// Services (no prices shown here, just booking)
// -------------------------------------------------
function Services() {
  const navigate = useNavigate();
  const handleBookClick = (serviceName) => {
    navigate(`/booking?service=${encodeURIComponent(serviceName)}`);
  };

  return (
    <PageWrapper title="Our Services">
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.6 }}
        className="grid grid-cols-1 md:grid-cols-2 gap-6"
      >
        <ServiceCard title="Portrait Photography" onBook={handleBookClick} />
        <ServiceCard title="Individual Photography" onBook={handleBookClick} />
        <ServiceCard title="Headshot Photography" onBook={handleBookClick} />
        <ServiceCard title="Passport Photos" onBook={handleBookClick} />
      </motion.div>
    </PageWrapper>
  );
}

// -------------------------------------------------
// Pricing (with images, notes, and Book Now)
// -------------------------------------------------
function Pricing() {
  const navigate = useNavigate();
  const handleBookClick = (serviceName) => {
    navigate(`/booking?service=${encodeURIComponent(serviceName)}`);
  };

  const services = [
    {
      title: "Portrait Photography",
      prices: ["$150 — 1 hour and over", "$65 — under 1 hour"],
      note: "Includes editing.",
      img: "https://source.unsplash.com/featured/?portrait,studio",
    },
    {
      title: "Individual Photography",
      prices: ["$55 — every 30 minutes"],
      note: "Includes editing.",
      img: "https://source.unsplash.com/featured/?portrait,individual",
    },
    {
      title: "Headshot Photography",
      prices: ["$100"],
      note: "Includes editing.",
      img: "https://source.unsplash.com/featured/?headshot,professional",
    },
    {
      title: "Passport Photos",
      prices: ["$12"],
      note: "Includes printing.",
      img: "https://source.unsplash.com/featured/?passport,photo",
    },
  ];

  return (
    <PageWrapper title="Pricing">
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.6 }}
        className="grid grid-cols-1 md:grid-cols-2 gap-8"
      >
        {services.map((s, i) => (
          <motion.div
            key={s.title}
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            transition={{ duration: 0.6, delay: i * 0.12 }}
            className="flex gap-6 bg-gray-900 rounded-2xl overflow-hidden border border-gray-800 shadow-md"
          >
            <img src={s.img} alt={s.title} className="w-1/2 object-cover h-full rounded-l-2xl" />
            <div className="p-6 flex-1">
              <h3 className="text-2xl font-semibold text-amber-300">{s.title}</h3>
              <div className="mt-3 space-y-2">
                {s.prices.map((p, idx) => (
                  <div key={idx} className="inline-block bg-amber-400 text-black px-3 py-1 rounded">{p}</div>
                ))}
              </div>
              <p className="mt-4 text-gray-400">{s.note}</p>
              <div className="mt-6">
                <button
                  onClick={() => handleBookClick(s.title)}
                  className="inline-block px-5 py-3 bg-amber-400 text-black font-medium rounded"
                >
                  Book Now
                </button>
              </div>
            </div>
          </motion.div>
        ))}
      </motion.div>
    </PageWrapper>
  );
}

// -------------------------------------------------
// Booking (Contact) — reads ?service= query to prefill
// -------------------------------------------------
function Contact() {
  const location = useLocation();
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    phone: "",
    service: "",
    date: "",
    message: "",
  });
  const [status, setStatus] = useState("");

  useEffect(() => {
    const params = new URLSearchParams(location.search);
    const service = params.get("service");
    if (service) {
      setFormData((prev) => ({ ...prev, service }));
    }
  }, [location.search]);

  const handleChange = (e) => {
    setFormData({ ...formData, [e.target.name]: e.target.value });
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setStatus("Sending...");
    try {
      const response = await fetch(FORMSPREE_ENDPOINT, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData),
      });
      if (response.ok) {
        setStatus("Thank you for booking with Tj's Photophactory!");
        setFormData({ name: "", email: "", phone: "", service: "", date: "", message: "" });
      } else {
        setStatus("Error sending message. Please try again.");
      }
    } catch (error) {
      setStatus("Network error. Please try again later.");
    }
  };

  return (
    <PageWrapper title="Booking">
      <motion.form
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.6 }}
        onSubmit={handleSubmit}
        className="space-y-4 max-w-xl"
      >
        <input
          type="text"
          name="name"
          value={formData.name}
          onChange={handleChange}
          placeholder="Name"
          required
          className="w-full p-3 rounded bg-gray-900 border border-gray-700"
        />
        <input
          type="email"
          name="email"
          value={formData.email}
          onChange={handleChange}
          placeholder="Email"
          required
          className="w-full p-3 rounded bg-gray-900 border border-gray-700"
        />
        <input
          type="tel"
          name="phone"
          value={formData.phone}
          onChange={handleChange}
          placeholder="Phone"
          className="w-full p-3 rounded bg-gray-900 border border-gray-700"
        />
        <select
          name="service"
          value={formData.service}
          onChange={handleChange}
          required
          className="w-full p-3 rounded bg-gray-900 border border-gray-700"
        >
          <option value="">Select Service</option>
          <option value="Portrait Photography">Portrait Photography</option>
          <option value="Individual Photography">Individual Photography</option>
          <option value="Headshot Photography">Headshot Photography</option>
          <option value="Passport Photos">Passport Photos</option>
        </select>
        <input
          type="date"
          name="date"
          value={formData.date}
          onChange={handleChange}
          required
          className="w-full p-3 rounded bg-gray-900 border border-gray-700"
        />
        <textarea
          name="message"
          value={formData.message}
          onChange={handleChange}
          placeholder="Message"
          className="w-full p-3 rounded bg-gray-900 border border-gray-700"
        />
        <button
          type="submit"
          className="px-6 py-3 bg-amber-400 text-black rounded-lg font-medium shadow hover:bg-amber-300"
        >
          Submit Booking Request
        </button>
        {status && <p className="text-sm text-gray-400 mt-2">{status}</p>}
      </motion.form>
    </PageWrapper>
  );
}

// -------------------------------------------------
// Service card used on Services page (no prices)
// -------------------------------------------------
function ServiceCard({ title, onBook }) {
  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6 }}
      className="p-6 rounded-xl bg-gradient-to-b from-gray-900 to-black border border-gray-800"
    >
      <div className="text-amber-300 font-semibold">{title}</div>
      <div className="mt-4">
        <button onClick={() => onBook(title)} className="text-amber-400 text-sm underline">
          Book this
        </button>
      </div>
    </motion.div>
  );
}

// -------------------------------------------------
// App shell (Router + Routes) — ensures hooks/components are inside Router
// -------------------------------------------------
export default function PhotophactoryApp() {
  return (
    <Router>
      <div className="min-h-screen bg-black text-gray-100 antialiased">
        <Header />
        <main>
          <Routes>
            <Route path="/" element={<FadeWrapper><Home /></FadeWrapper>} />
            <Route path="/services" element={<FadeWrapper><Services /></FadeWrapper>} />
            <Route path="/portfolio" element={<FadeWrapper><Portfolio /></FadeWrapper>} />
            <Route path="/pricing" element={<FadeWrapper><Pricing /></FadeWrapper>} />
            <Route path="/booking" element={<FadeWrapper><Contact /></FadeWrapper>} />
          </Routes>
        </main>
        <Footer />
      </div>
    </Router>
  );
}

// -------------------------------------------------
// Sanity checks (manual)
// -------------------------------------------------
/*
1) Router context
   - App renders inside <Router>. All hooks (useNavigate/useLocation) only used in children under <Routes>.
2) Home title
   - Shows "Headshots and Portraits".
3) Services
   - No prices. Clicking "Book this" navigates to /booking?service=<name>.
4) Pricing
   - Shows price chips and images; Book Now navigates and pre-fills service.
5) Booking prefill
   - Visiting /booking?service=Headshot%20Photography selects that option.
6) Footer icons
   - IG and TikTok open in new tabs with rel security attributes.
7) Animations
   - Fade/slide works; motion wrappers render under Router.
*/
