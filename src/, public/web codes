/** React Single File App for Tj's Photophactory — fixed Router context & restored full app **/
import React, { useState, useEffect } from "react";
import {
  BrowserRouter as Router,
  Routes,
  Route,
  Link,
  useLocation,
  useNavigate,
} from "react-router-dom";
import { motion } from "framer-motion";
import { FaInstagram } from "react-icons/fa";
import { FaTiktok } from "react-icons/fa6"; // TikTok icon is in fa6

// -------------------------------------------------
// Config
// -------------------------------------------------
const FORMSPREE_ENDPOINT = "https://formspree.io/f/xblprqlr";

// -------------------------------------------------
// Shared animation wrapper (must render INSIDE Router tree)
// -------------------------------------------------
function FadeWrapper({ children }) {
  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      transition={{ duration: 0.6 }}
    >
      {children}
    </motion.div>
  );
}

// -------------------------------------------------
// Layout helper
// -------------------------------------------------
function PageWrapper({ title, children }) {
  return (
    <div className="max-w-6xl mx-auto px-6 py-16">
      <h1 className="text-3xl font-semibold text-amber-400 mb-6">{title}</h1>
      {children}
    </div>
  );
}

